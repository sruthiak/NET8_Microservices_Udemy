


<div class="container">
    <div class="row">
        <h1>Products</h1>

    </div>
    <div class="row">
        <a asp-action="Create">Create New</a>
        <table class="border table">
            <thead>
                <tr>
                    <th> Name</th>
                    <th> Category Name</th>
                    <th> Price</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>
                            @item.Name
                        </td>
                        <td>
                            @item.CategoryName
                        </td>
                        <td>
                            @item.Price
                        </td>
                        <td>
                            <a asp-action="Update" asp-route-id="@item.Id">Edit</a> |<a asp-action="Detail" asp-route-id="@item.Id">Details</a> | <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    </div>

</div>
